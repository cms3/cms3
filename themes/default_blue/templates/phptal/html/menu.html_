
<ul metal:define-macro="show-items">
	<li tal:repeat="item items">
		<a tal:condition="not: item/active" tal:content="item/title" tal:attributes="href item/uri; class php: item['selected'] ? 'selected' : NULL" />
		<span tal:condition="item/active" tal:content="item/title" tal:attributes="class 'selected'" />
		<tal:block tal:condition="item/children" tal:define="items item/children" metal:use-macro="show-items" />
  </li>
</ul>

<tal:block metal:use-macro="show-items" />